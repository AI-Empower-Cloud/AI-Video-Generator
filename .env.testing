# Environment Variables for TESTING

# Application Settings
APP_ENV=testing
DEBUG=true
HOST=localhost
PORT=8504

# Video Generation Settings (Reduced for testing)
MAX_VIDEO_DURATION=10
MAX_VIDEO_RESOLUTION=640x480
DEFAULT_RESOLUTION=320x240
DEFAULT_FPS=15

# Processing Settings (Reduced for testing)
MAX_TEXT_LENGTH=1000
MAX_FILE_SIZE_MB=5
MAX_CONCURRENT_GENERATIONS=2

# NLP Settings
SPACY_MODEL=en_core_web_sm
EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base
USE_GPU=false

# Audio Settings (Disabled for testing)
ENABLE_AUDIO=false
ENABLE_BACKGROUND_MUSIC=false
DEFAULT_VOICE_RATE=200
DEFAULT_VOICE_VOLUME=0.5

# Animation Settings (Simplified for testing)
ENABLE_ADVANCED_ANIMATION=false
ENABLE_PARTICLE_EFFECTS=false

# Storage Settings
OUTPUT_DIRECTORY=./test_output
TEMP_DIRECTORY=./test_temp
CLEANUP_TEMP_FILES=true
FILE_RETENTION_HOURS=1

# Security Settings (Relaxed for testing)
ENABLE_RATE_LIMITING=false
REQUESTS_PER_MINUTE=1000
ENABLE_FILE_SCANNING=false

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=./test_logs/app.log

# Testing specific
TEST_MODE=true
SKIP_SLOW_TESTS=false
