# Environment Variables for AI Video Generator

# ==============================================================================
# DEVELOPMENT ENVIRONMENT
# ==============================================================================

# Application Settings
APP_ENV=development
DEBUG=true
HOST=localhost
PORT=8503

# Video Generation Settings
MAX_VIDEO_DURATION=30
MAX_VIDEO_RESOLUTION=1920x1080
DEFAULT_RESOLUTION=640x480
DEFAULT_FPS=24

# Processing Settings
MAX_TEXT_LENGTH=10000
MAX_FILE_SIZE_MB=10
MAX_CONCURRENT_GENERATIONS=3

# NLP Settings
SPACY_MODEL=en_core_web_sm
EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base
USE_GPU=false

# Audio Settings
ENABLE_AUDIO=true
ENABLE_BACKGROUND_MUSIC=true
DEFAULT_VOICE_RATE=150
DEFAULT_VOICE_VOLUME=0.9

# Animation Settings
ENABLE_ADVANCED_ANIMATION=true
ENABLE_PARTICLE_EFFECTS=true

# Storage Settings
OUTPUT_DIRECTORY=./generated_videos
TEMP_DIRECTORY=./temp
CLEANUP_TEMP_FILES=true
FILE_RETENTION_HOURS=24

# Security Settings
ENABLE_RATE_LIMITING=true
REQUESTS_PER_MINUTE=60
ENABLE_FILE_SCANNING=true

# YouTube API (Optional - Add your credentials)
# YOUTUBE_CLIENT_ID=your_client_id_here
# YOUTUBE_CLIENT_SECRET=your_client_secret_here
# YOUTUBE_API_KEY=your_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Database (if using)
# DATABASE_URL=sqlite:///./data/app.db

# Redis (for caching, if using)
# REDIS_URL=redis://localhost:6379/0

# Monitoring (if using)
# SENTRY_DSN=your_sentry_dsn_here
